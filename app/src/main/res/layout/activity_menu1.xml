<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".menu_1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:id="@+id/topbar"
        >

        <ImageView
            android:id="@+id/menu_bt"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_icon"
            ></ImageView>

        <ImageView
            android:id="@+id/id_profile"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/id"
            />

    </RelativeLayout>
    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_below="@+id/topbar"
        android:id="@+id/drwr"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/upperframe"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/playlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Playlists"
                    android:paddingLeft="20dp"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/playlist_list"
                android:layout_below="@+id/playlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <RelativeLayout
                        android:id="@+id/playlist_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <ImageView
                            android:id="@+id/playlist_img"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/playlist_icon"
                            />
                        <TextView
                            android:layout_below="@+id/playlist_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Playlist 1"
                            android:textColor="@color/corn"
                            android:layout_centerInParent="true"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <ImageView
                            android:id="@+id/playlist2"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/playlist_icon"
                            />
                        <TextView
                            android:layout_below="@+id/playlist2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Playlist 1"
                            android:textColor="@color/corn"
                            android:layout_centerInParent="true"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <ImageView
                            android:id="@+id/playlist3_img"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/playlist_icon"
                            />
                        <TextView
                            android:layout_below="@+id/playlist3_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Playlist 1"
                            android:textColor="@color/corn"
                            android:layout_centerInParent="true"
                            />

                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/artistlist_name"
                android:layout_below="@+id/playlist_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Artists"
                    android:paddingLeft="20dp"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@+id/artistlist_name"
                android:id="@+id/artistlist_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <RelativeLayout
                        android:id="@+id/artistlist_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <ImageView
                            android:id="@+id/artistlist_img"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/playlist_icon"
                            />
                        <TextView
                            android:layout_below="@+id/artistlist_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Playlist 1"
                            android:textColor="@color/corn"
                            android:layout_centerInParent="true"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <ImageView
                            android:id="@+id/artistlist2_img"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/playlist_icon"
                            />
                        <TextView
                            android:layout_below="@+id/artistlist2_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Playlist 1"
                            android:textColor="@color/corn"
                            android:layout_centerInParent="true"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <ImageView
                            android:id="@+id/artistlist3_img"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/playlist_icon"
                            />
                        <TextView
                            android:layout_below="@+id/artistlist3_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Playlist 1"
                            android:textColor="@color/corn"
                            android:layout_centerInParent="true"
                            />

                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/song_bar"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_above="@+id/features_line"
                android:layout_marginBottom="-10dp"
                android:background="@drawable/border">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    >

                    <TextView
                        android:id="@+id/songname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Song Name"
                        android:textColor="@color/corn"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    >

                    <LinearLayout
                        android:id="@+id/forward_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|center_horizontal"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/rewind" />
                        <View
                            android:layout_width="20dp"
                            android:layout_height="match_parent"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/pause_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal|center_vertical">

                        <ImageView
                            android:visibility="visible"
                            android:id="@+id/play"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/resume"
                            />
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/pause"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/pause"
                            />
                        <View
                            android:layout_width="20dp"
                            android:layout_height="match_parent"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/fast" />
                        <View
                            android:layout_width="20dp"
                            android:layout_height="match_parent"/>

                    </LinearLayout>
                </LinearLayout>



            </RelativeLayout>


            <LinearLayout
                android:id="@+id/features_line"
                android:layout_above="@+id/bottom_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#222222"
                android:weightSum="4">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bold_heart" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom">

                    <ImageView
                        android:id="@+id/add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/plus" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom">

                    <ImageView
                        android:id="@+id/SearchMusic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/search" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/listenlater" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_line"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#222222"
                android:weightSum="4">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Liked"
                        android:textColor="#ffff"
                        android:textSize="12dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add"
                        android:textColor="#ffff"
                        android:textSize="12dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Search"
                        android:textColor="#ffff"
                        android:textSize="12dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Listen Later"
                        android:textColor="#ffff"
                        android:textSize="12dp" />
                </RelativeLayout>
            </LinearLayout>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start">
            <include
                layout="@layout/profile"/>
        </LinearLayout>





    </androidx.drawerlayout.widget.DrawerLayout>





</RelativeLayout>